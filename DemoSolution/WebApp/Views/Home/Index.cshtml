@model System.Collections.Generic.List<WebApp.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <table class="table table-border">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                </tr>
            }

        </tbody>
    </table>


    <div class="card">
        <form asp-action="Index" asp-controller="Home" method="post">
            <div class="card-header">
                <input name="name" type="text" id="name" class="form-control" /> <br />
                <button type="submit" class="btn btn-success" onclick="addnew()">Add</button>
            </div>
        </form>


    </div>
</div>

@section Scripts{
<script>
    function addnew(){
        var name = $('#name').val();
        alert(name);
    }
</script>
}